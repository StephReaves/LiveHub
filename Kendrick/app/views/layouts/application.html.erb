<!DOCTYPE html>
<html>
<head>
  <title>Kendrick</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <ul>
    <a href="/"><li>Home</li></a>
    <a href="/users/new"><li>Signup</li></a>
    <a href="/users/login"><li>Login</li></a>
    <!-- Renders logout if there is a session -->
    <% if session[:user_id] %>
      <a href="#"><li>Logout</li></a>
    <% end %>
  </ul>

  <div id="main-container" class="container">
    <div class="row">
      <div class="col-xs-3">
        <h3>Tealeaf Academy Todo</h3>
      </div>
      <div class="col-xs-9">
       <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>

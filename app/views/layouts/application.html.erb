<!DOCTYPE html>
<html>
<head>
  <title>Kendrick</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <ul>
    <!-- Renders logout if there is a session -->
    <% if session[:user_id] %>
      <a href="/genres"><li>Home</li></a>
      <a href="/logout"><li>Logout</li></a>
    <% else %>
      <a href="/"><li>Home</li></a>
      <a href="/users/new"><li><span id="signup-link">Signup</span></li></a>
      <span id="login-link"><a href="/signin"><li><span id="signin-link">Login</span></li></a></span>
    <% end %>
  </ul>

  <div id="main-container" class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>LiveHub</h2>
      </div>
      <div class="col-xs-9">
      </div>
    </div>
       <%= yield %>
    <div id="signup-partial" style="display:none;">
      <%= render partial: 'users/form', locals: {user: @user = User.new()} %>
    </div>
    <div id="login-partial" style="display:none;">
      <%= render partial: 'sessions/new' %>
    </div>
  </div>
</body>
</html>
